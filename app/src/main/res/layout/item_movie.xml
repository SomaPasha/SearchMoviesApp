<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_movie_image_view"
                    tools:src="@drawable/duna_image"
                    android:layout_width="@dimen/weight_image"
                    android:layout_height="@dimen/height_image" />
                <TextView
                    android:id="@+id/name_movie_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Duna"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/year_movie_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       tools:text="2020"/>
                    <ImageView
                        android:id="@+id/star_movie_image_view"
                        android:layout_width="@dimen/size_image_star"
                        android:layout_height="@dimen/size_image_star"
                        android:layout_marginStart="@dimen/size_image_star"
                        android:layout_marginEnd="@dimen/margin_end_star"
                        android:src = "@drawable/ic_baseline_star_rate_24"
                        />
                    <TextView
                        android:id="@+id/ratings_movie_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6.9"
                       />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</com.google.android.material.circularreveal.CircularRevealFrameLayout>
